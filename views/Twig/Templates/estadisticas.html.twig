{% extends "headerAdministrador.html.twig" %}

{% block contenido %}	
	<br>		

  <h3>Kilos de pedidos que fueron entregados </h3><br>
	<form class="formulari" method= "post" action="index.php?controller=EstadisticasController&amp;action=estadisticasA">
    
                            
