                <option value="kg">Kg</option>
                <option value="g">Gs</option>
                <option value="lt">Lts</option>
            </select> <br>
            <label>Peso por paquete: </label><input type="text" name="peso_unitario"><br>
            Stock:<input type="number" name="stock"><br>
            <label>Reservado:</label> <input type="number" name="reservado"> <br>
            <input type="hidden" name="token" value="{{token}}" >
            <br>
            <br>
                <input type="submit" value="Dar de alta">
                <input type="reset"  value="Limpiar" id="limpiar" onclick="document.location.href='index.php?controller=abmAlimento&amp;action=alta'">
        </fieldset>
                            
    </form>
