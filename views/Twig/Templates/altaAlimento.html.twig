{% block contenido %}

   {{msj}}
    <form id="form-alta" name="formAltaAlimento" action="index.php?controller=abmAlimentos&amp;action=guardar" method="post">
        <fieldset>
            <legend>Carga de Alimento</legend>
            <label>C&oacute;digo: </label><input type="text" name="codigo" id="codigo" autofocus required> 
                <span class="error">{{ errores.codigo }}</span> <br>
            <label>Descripcion:</label> <input type="text" name="descripcion" id="descripcion" required>
                <span class="error">{{ errores.nombre }}</span> <br>
            <label>Fecha de Vencimiento:</label><input type="date" name="fecha_vencimiento"><br>
            <label>Contenido (cantidad x peso):</label> <input type="text" name="contenido[0]" size="5"> x <input type="text" name="contenido[1]" size="5">
