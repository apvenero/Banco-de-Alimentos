{% extends "headerAdministrador.html.twig" %}

{% block contenido %}

   
    <form id=""  action="index.php?controller=abmAlimentos&amp;action=guardarModificado&amp;codigo={{alimento[0]['codigo']}}" method="post">
		<fieldset>
			<legend>Modificacion de Alimento</legend>
			
			<label>Descripcion:</label> <input type="text" name="descripcion" id="descripcion" value= "{{alimento[0]['descripcion']}}" required>
				<span class="error">{{ errores.nombre }}</span> <br>
			<label>Fecha de Vencimiento:</label><input type="date" name="fecha_vencimiento" value="{{alimento[0]['fecha_vencimiento']}}"/><br>
			<label>Contenido:</label> <input type="text" name="contenido[0]" size="5" value="{{alimento[0]['contenido'][0]}}"> x <input type="text" name="contenido[1]" size="5" value="{{alimento[0]['contenido'][1]}}">
			<select name="unidad">
				<option value="kg">Kg</option>
				<option value="g">Gs</option>
				<option value="lt">Lts</option>
			</select> <br>
			<label>Peso por paquete: </label><input type="text" name="peso_unitario" value="{{alimento[0]['peso_unitario']}}"><br>
			Stock:<input type="number" name="stock" value="{{alimento[0]['stock']}}"><br>
			<label>Reservado:</label> <input type="number" name="reservado" value="{{alimento[0]['reservado']}}"><br>
			
			<br>
			<br>
				<input type="submit" value="Modificar">
		</fieldset>
				
							
	</form>
	<br>
	<br>
	<br>

	<input type="button" value="Volver" onclick="document.location.href='index.php?controller=abmAlimentos&amp;action=listar'">	
				
{% endblock %}
							